<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Аренда велосипедов", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Календарь", root_path %></li>
          <li><%= link_to "Наши велосипеды", bicycles_path %></li>
          <li><%= link_to "Аренда велосипеда", new_rent_path %></li>
          <% if signed_in?  %>
              <% if current_user.admin? %>
                <li><%= link_to "Добавить велосипед", new_bicycle_path %></li>
              <% end %>
              <li><%= link_to "Выйти", signout_path, method: 'delete' %></li>
