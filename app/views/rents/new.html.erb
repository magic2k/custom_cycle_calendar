<h1>Запись на велосипед</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @rent do |f| %>

        <%= render 'shared/error_messages', object: @rent %>

        <%= f.label 'Имя (кто берет в прокат)' %>
        <%= f.text_field :renter_name%>

        <%= label_tag 'Дата проката' %>
        <%= f.text_field :date %>

        <%= f.label 'Choose your велосипед' %>
        <%= f.collection_select :bicycle_id, Bicycle.all, :id, :name %>

        <%= f.submit "Zаписаться", class: "btn large-btn btn-primary" %>
    <% end %>
  </div>
</div>