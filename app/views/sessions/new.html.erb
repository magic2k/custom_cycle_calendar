<% provide(:title, "Sign in") %>
<h1>Админ логин</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :login %>
        <%= f.text_field :login %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
